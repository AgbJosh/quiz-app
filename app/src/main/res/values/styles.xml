<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="QuestionsStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/question_text_size</item>
        <item name="android:lineSpacingExtra">5dp</item>
    </style>

    <style name="QuestionNumberStyle">
        <item name="android:textSize">@dimen/question_number_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OptionsTextStyle">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/options_text</item>
    </style>

</resources>
